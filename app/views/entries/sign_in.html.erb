<% if @name %>
  <h1>Hello <%= @name %>!</h1>
<% end %>

<%= form_tag action: 'sign_in' do %>
  <p>Enter your name:
  <%= text_field_tag 'visitor_name', @name %></p>

  <%= submit_tag 'Sign in' %>

  <p>Previous visitors:</p>
  <% @entry.each do |entry| %>
  <ul>
    <li><%= entry.name %></li>
  </ul>
  <% end %>
<% end %>
